@model SXEdu2XHKD.WebUI.Models.ForgotPassWordModel

@{
    ViewBag.Title = "ForgotPassWord";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xs-offset-2 col-xs-8 col-md-offset-3 col-md-6">
            <h2>忘记密码</h2>
            <p>
                您将使用<strong>山西教育资源公共服务平台账户</strong>找回您在新华课典的登陆账户，
                输入您在山西教育资源公共服务平台的用户名，
                点击确认后重新从山西山西教育资源公共服务平台跳转至本站可重新设置您的密码。
            </p>
            <hr />
            <form action="/Member/ForgotPassWord" method="post" id="LoginForm">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <strong>@Html.ValidationMessage("NameNotExsist")</strong>
                <strong>@Html.ValidationMessageFor(model => model.SXEduUserName) </strong>
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label for="SXEduUserName">@Html.DisplayNameFor(m => m.SXEduUserName)</label>
                    <input class="text-box form-control" name="SXEduUserName" id="SXEduUserName" type="text" />
                    @*@Html.EditorFor(model => model.SXEduUserName)*@

                </div>
                <div class="form-group">
                    <div class="row">
                        <button class="btn btn-default btn-default col-md-offset-1 col-md-3 col-xs-offset-1 col-xs-4" type="submit">确认</button>
                        <a href="@Url.Action("Index","Login")" class="btn btn-default btn-default col-md-offset-4 col-md-3 col-xs-offset-2 col-xs-4">取消</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>